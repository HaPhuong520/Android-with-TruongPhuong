<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:background="#f2f2f2">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_centerInParent="true"
                    android:text="Bạn bị gầy mất rồi, phải tăng cân cho đẹp thôi"></TextView>
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:src="@drawable/thin"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"></ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="- Ăn uống đúng giờ và không được bỏ bữa nhất là bữa sáng.">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="- Ngoài 3 bữa chính thì nên ăn thêm 1 vài bữa phụ.">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="- Nên ăn nhiều thục phẩm giàu dinh dưỡng như thịt cá trứng sữa, bên cạnh đó cần bổ sung thêm rau và hoa quả tươi">
            </TextView>
            <pl.droidsonroids.gif.GifTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/anhdonggay"
                android:layout_marginLeft="60dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="   "/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>