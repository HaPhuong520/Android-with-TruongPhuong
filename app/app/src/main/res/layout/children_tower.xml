<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:text="Trẻ em là búp trên cành, biết ăn biết ngủ biết học hành là ngoan !">
        </TextView>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/thaptre">
            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- Nên cho trẻ ăn từ thức ăn lỏng tới đặc, từ lượng ít tới nhiều và cũng nên tập cho trẻ ăn quen dần với các thức ăn mới.">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="- Không cho trẻ ăn bánh, kẹo, uống nước ngọt trước bữa ăn vì chất ngọt làm tăng đường huyết, khiến trẻ no bụng, chán ăn.">
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="- Nên khuyến khích hoặc tìm cách chế biến rau củ thành những món ăn hấp dẫn, dễ ăn để bổ sung đủ chất xơ cho trẻ.">
            </TextView>
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/trecon"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="85dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="   "/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>