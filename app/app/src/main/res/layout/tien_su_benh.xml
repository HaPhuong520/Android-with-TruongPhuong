<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
  >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp"
                android:text="Chọn căn bệnh"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold"></TextView>
            <RadioGroup
                android:id="@+id/ratioGoup"
                android:layout_width="match_parent"
                android:layout_height="545dp"
                android:layout_margin="20dp"
                android:background="@drawable/custom_btn">

                <RadioButton
                    android:id="@+id/benhTimMach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="  Bệnh tim mạch">

                </RadioButton>

                <View
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="10dp"
                    android:background="#000" />

                <RadioButton
                    android:id="@+id/benhTieuDuong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="  Bệnh tiểu đường">

                </RadioButton>

                <View
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="10dp"
                    android:background="#000" />

                <RadioButton
                    android:id="@+id/benhHuyetApCao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="  Bệnh huyết áp cao">

                </RadioButton>

                <View
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="10dp"
                    android:background="#000" />

                <RadioButton
                    android:id="@+id/benhHuyetApThap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="  Bệnh huyết áp thấp">

                </RadioButton>

                <View
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="10dp"
                    android:background="#000" />

                <RadioButton
                    android:id="@+id/benhMauNhiemMo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="  Bệnh máu nhiễm mỡ">

                </RadioButton>

                <View
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="10dp"
                    android:background="#000" />

                <RadioButton
                    android:id="@+id/benhGout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="  Bệnh gout">

                </RadioButton>

                <View
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="10dp"
                    android:background="#000" />

                <RadioButton
                    android:id="@+id/benhViemDaDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="  Bệnh viêm dạ dày">

                </RadioButton>

                <View
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="10dp"
                    android:background="#000" />

                <RadioButton
                    android:id="@+id/khongBenh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="  Tôi không có bệnh"></RadioButton>

                <View
                    android:layout_width="250dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="10dp"
                    android:background="#000" />
            </RadioGroup>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="30dp"
                android:background="@drawable/circle"
                android:id="@+id/btnSub"
                android:textStyle="bold">
                >
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:textColor="#6d1d17"

                    android:layout_centerInParent="true"
                    android:text="Kiểm tra"></TextView>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>