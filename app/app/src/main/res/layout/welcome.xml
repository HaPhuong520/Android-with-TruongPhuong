<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context=".mainlayout.Welcome"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:weightSum="3"
        android:background="#f2f2f2"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/anh1">

            <TextView
                android:id="@+id/tvv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="55dp"
                android:text="Xin chào,"
                android:textColor="#6d1d17"
                android:textSize="20dp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/tvsetUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="55dp"
                android:textStyle="italic"
                android:textColor="#6d1d17"
                android:layout_toRightOf="@+id/tvv"
                android:textSize="20dp">
            </TextView>
            <LinearLayout
                android:layout_width="140dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="50dp"
                android:layout_height="80dp"
                android:weightSum="2"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_centerInParent="true"
                    android:text="Thông tin tài khoản"
                    android:id="@+id/view_profile"
                    ></TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_centerInParent="true"
                    android:id="@+id/logout"
                    android:text="Đăng xuất"
                    ></TextView>
            </LinearLayout>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/setting"
                android:layout_margin="20dp"
                android:src="@drawable/ic_baseline_settings_24"
                android:layout_alignParentRight="true"></ImageView>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9C3838"
                android:text="Không cầu tinh thông cầm kỳ thi họa"
                android:layout_centerInParent="true"
                android:textSize="14dp"
                android:textStyle="italic"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9C3838"
                android:text="Chỉ mong chiên, xào, hấp, luộc món nào cũng được ăn!"
                android:layout_centerInParent="true"
                android:textSize="14dp"
                android:textStyle="italic"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:weightSum="2">

            <ImageView
                android:src="@drawable/hd"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/imgIntroduce"
                ></ImageView>
            <ImageView
                android:src="@drawable/ctna"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/imgFood"
                android:layout_weight="1"
                >
            </ImageView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:weightSum="2">

            <ImageView
                android:src="@drawable/cda"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/imgMode"
                ></ImageView>
            <ImageView
                android:src="@drawable/tdd"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/imgTower"
                android:layout_weight="1"
                >
            </ImageView>


        </LinearLayout>

    </LinearLayout>



</RelativeLayout>